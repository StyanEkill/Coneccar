<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/redirect"
    tools:context=".Ac.EnderecoRedirect">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:orientation="vertical"
        android:padding="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageview5"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/carrediret"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gostaria de completar seu perfil com seu endereço?"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnEndereco"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Cadastrar endereço agora"
            android:textAlignment="textStart"
            android:background="@drawable/buttonwhite"
            android:layout_marginTop="20dp"
            style="@android:style/Widget.Button"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnRedDirecao"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Não, obrigado"
            android:textAlignment="textStart"
            android:background="@drawable/buttonwhite"
            android:layout_marginTop="20dp"
            style="@android:style/Widget.Button"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"/>



    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>